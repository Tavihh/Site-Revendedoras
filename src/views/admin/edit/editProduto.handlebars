<link rel="stylesheet" href="/css/admin/form.css">



<div class="form-body">
    <h2>Produto</h2>
    <form action="/admin/produto/editar/{{{produto.id}}}" method="post" >
        <input class="form-input" type="text" name="nome" id="nome" placeholder="Nome" value="{{{produto.nome}}}">
        <input class="form-input" type="number" step="0.01" min="0" name="preco" id="preco" placeholder="Preco" value="{{produto.preco}}">
        <input class="form-input" type="text" name="link" id="link" placeholder="Link" value="{{{produto.link}}}">
        <input class="form-submit" type="submit" value="Atualizar">
        <input class="form-submit danger" onclick="location.href='/admin/produto/del/{{{produto.id}}}'" type="button" value="Deletar">
        <input class="form-submit" onclick="location.href='/admin'" type="button" value="Voltar">
    </form>
</div>

<script>
    const fileInput = document.getElementById('foto')
    const form_input = document.getElementById('form-file')

    fileInput.addEventListener('change', ()=>{
        if(fileInput.files.length > 0) {
            form_input.classList.add('active')
            form_input.innerText = fileInput.files[0].name
        } else {
            form_input.classList.remove('active')
            form_input.innerText = "Foto"
        }
    })
</script>