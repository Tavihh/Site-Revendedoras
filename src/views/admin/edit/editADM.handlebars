<link rel="stylesheet" href="/css/admin/form.css">

<div class="form-body">
    <h2>Loja</h2>
    <form action="/admin/editarLoja/" method="post">
        <input class="form-input" type="text" name="nome" id="nome" placeholder="Nome" value="{{loja.nome}}">
        <input class="form-input" type="text" name="telefone" id="telefone" placeholder="(00) 00000-0000" maxlength="15" oninput="mascaraTelefone(this)" required value="{{loja.telefone}}">
        <input class="form-submit" type="submit" value="Atualizar">
        <input class="form-submit" onclick="location.href='/admin'" type="button" value="Voltar">
    </form>
</div>

<div class="form-body">
    <h2>Conta</h2>
    <form action="/admin/editar/{{user.id}}" method="post">
        <input class="form-input" type="text" name="nome" id="nome" placeholder="Nome" value="{{user.nome}}">
        <input class="form-input" type="text" name="sobrenome" id="sobrenome" placeholder="Sobrenome" value="{{user.sobrenome}}">
        <input class="form-input" type="text" name="email" id="email" placeholder="E-mail" value="{{user.email}}">
        <input class="form-submit" type="submit" value="Atualizar">
        <input class="form-submit" onclick="location.href='/admin'" type="button" value="Voltar">
    </form>
</div>

<div class="form-body">
    <h2>Trocar Senha</h2>
    <form action="/admin/atualizarSenha" method="post" class="form">
        <input type="password" name="senha" id="senha" class="form-input" placeholder="Digite sua senha atual">
        <input type="password" name="newsenha" id="newsenha" class="form-input" placeholder="Digite sua nova senha">
        <input type="password" name="newsenha2" id="newsenha2" class="form-input" placeholder="Confirme sua nova senha">
        <input type="submit" value="Atualizar" class="form-submit">
    </form>
</div>


<script src="/js/scripts.js"></script>