<link rel="stylesheet" href="/css/admin/index.css">


<h2>Painel de Produtos</h2>

<div>
    <table>
        <thead>
            <tr>
                <td class="imagem">Foto</td>
                <td>Nome</td>
                <td>Pre√ßo</td>
            </tr>
        </thead>
        <tbody>
            {{#each produto}}
            <tr onclick="location.href='/admin/produto/editar/{{id}}'">
                <td class="imagem"><img src="/produtos/{{path_foto}}" alt=""></td>
                <td>{{nome}}</td>
